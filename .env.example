# ============================================
# Transferência de Materiais Entre Filiais
# Configuração de Ambiente
# ============================================

# ============================================
# DATABASE
# ============================================
# Connection string do PostgreSQL
# Formato: Host=hostname;Port=5432;Database=nome_db;Username=usuario;Password=senha
# Exemplo local: Host=localhost;Port=5432;Database=transferencia_materiais;Username=transferencia;Password=transferencia
# Exemplo produção: Host=db.prod.example.com;Port=5432;Database=transferencia_materiais;Username=transferencia;Password=senha_segura_123
DATABASE_URL=Host=localhost;Port=5432;Database=transferencia_materiais;Username=transferencia;Password=transferencia

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Provider: mailpit (desenvolvimento) ou smtp (produção)
EMAIL_PROVIDER=mailpit

# SMTP Configuration (usado quando EMAIL_PROVIDER=smtp)
# Mock para desenvolvimento:
EMAIL_SMTP_HOST=smtp.mailtrap.io
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=seu_usuario_mailtrap
EMAIL_SMTP_PASSWORD=sua_senha_mailtrap
EMAIL_SMTP_FROM=noreply@transferencia.example.com
EMAIL_SMTP_FROM_NAME=Transferência de Materiais

# Real para produção (exemplo):
# EMAIL_SMTP_HOST=smtp.sendgrid.net
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=apikey
# EMAIL_SMTP_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# EMAIL_SMTP_FROM=transferencia@empresa.com.br
# EMAIL_SMTP_FROM_NAME=Sistema de Transferência

# ============================================
# INTEGRATION ADAPTER
# ============================================
# Mode: stub (desenvolvimento) ou real (produção)
# Stub modes: ALWAYS_OK, FAIL_RATE, SCENARIO
INTEGRATION_ADAPTER_MODE=stub
INTEGRATION_ADAPTER_STUB_MODE=ALWAYS_OK
INTEGRATION_ADAPTER_FAIL_RATE=0.1
INTEGRATION_ADAPTER_SCENARIO=default

# Real integration (quando TBD-01 for fechado):
# INTEGRATION_ADAPTER_MODE=real
# INTEGRATION_ADAPTER_QIVE_URL=https://qive.prod.example.com/api
# INTEGRATION_ADAPTER_QIVE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# INTEGRATION_ADAPTER_RM_URL=https://rm.prod.example.com/api
# INTEGRATION_ADAPTER_RM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# APPLICATION
# ============================================
# Ambiente: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# URLs da aplicação
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# ============================================
# SECURITY (Produção)
# ============================================
# JWT Secret (se implementar autenticação)
# JWT_SECRET=your-super-secret-key-min-32-chars-change-in-production

# API Keys (se necessário)
# API_KEY_READONLY=readonly-key-12345
# API_KEY_ADMIN=admin-key-67890

# ============================================
# LOGGING
# ============================================
# Log Level: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information

# ============================================
# FEATURE FLAGS (Opcional)
# ============================================
# FEATURE_ENABLE_SWAGGER_IN_PRODUCTION=false
# FEATURE_ENABLE_DETAILED_ERRORS=false
